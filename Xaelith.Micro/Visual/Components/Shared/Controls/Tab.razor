@code {
    [CascadingParameter]
    TabView Parent { get; set; } = null!;

    [Parameter]
    public string Header { get; set; } = "";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    protected override void OnInitialized()
    {
        Parent.RegisterTab(new TabView.Tab
        {
            Header = Header,
            Content = ChildContent!
        });
    }
}