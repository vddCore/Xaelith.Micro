@inject IConfigService Configuration

<PageTitle>@Configuration.Root!.General.SiteTitle</PageTitle>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="description"
          content="@Configuration.Root!.General.SiteDescription"/>
        
    <meta charset="utf-8"/>

    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"/>

    <base href="/" />
    
    <link rel="stylesheet"
          href="@Assets["lib/selectr/selectr.min.css"]" />

    <link rel="stylesheet"
          href="@Assets["lib/highlightjs/styles/gradient-v.css"]"/>

    <link rel="stylesheet"
          href="@Assets["style/shared/fonts.css"]"/>

    <link rel="stylesheet"
          href="@Assets["style/shared/global.css"]"/>

    <link rel="stylesheet" 
          href="@Assets["style/admin/panel.css"]"/>
    
    <link rel="stylesheet"
          href="@Assets["style/admin/editor.css"]"/>
    
    <link rel="stylesheet"
          href="@Assets["style/admin/login.css"]"/>
    
    <link rel="stylesheet"
          href="Xaelith.Micro.styles.css"/>
    
    <script src="@Assets["lib/xaelith/xaelith.js"]"></script>
    <script src="@Assets["lib/xaelith/admin.js"]"></script>
    
    <script src="@Assets["lib/highlightjs/highlight.min.js"]"></script>
    <script src="@Assets["lib/jquery/jquery-1.3.7.min.js"]"></script>
    <script src="@Assets["lib/selectr/selectr.min.js"]"></script>
    
    <style>
        @((MarkupString)Configuration.Root.Core.UserCSS)
    </style>

    <ImportMap/>
    <HeadOutlet/>
</head>

<body>
    <Routes @rendermode="RenderModeForPage"/>
    <script src="_framework/blazor.web.js"></script>
    <script src="lib/rejoin-restyle/rejoin-observer.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = null!;

    private IComponentRenderMode? RenderModeForPage
        => RenderModeSelector.GetRenderMode(HttpContext);
}